{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "prepare": {
      "cache": false
    },
    "dev": {
      "cache": true,
      "persistent": true
    },
    "test": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsup.config.*", "vite.config.*", "tsconfig.*"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "preview": {
      "cache": false,
      "persistent": true
    }
  }
}
